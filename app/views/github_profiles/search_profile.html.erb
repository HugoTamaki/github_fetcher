<div class="container">
  <div class="row justify-content-center">
    <h1>GitHub Profile Registration</h1>
    <%= form_with url: fetch_profile_path, method: :post, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name, "GitHub User Name" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :github_url, "GitHub Profile URL" %>
        <%= form.text_field :github_url, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>