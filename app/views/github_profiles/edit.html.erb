<div class="row">
  <h1>Edit GitHub Profile</h1>
  <%= form_with model: @github_profile, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :github_url %>
      <%= form.text_field :github_url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Update Profile", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>